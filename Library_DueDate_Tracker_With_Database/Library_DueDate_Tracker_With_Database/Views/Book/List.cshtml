
@{
    ViewData["Title"] = "List";
}

<h1>Book List</h1>
<section>
    @if (ViewBag.Book.Count > 0)
    {
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Publication Date</th>               
            </tr>
            @foreach (Book book in ViewBag.Book)
            {
                <tr>
                    <td><a href="/Book/Details?id=@(book.Author.ID)">@(book.Author.ID)</a></td>
                    <td>@(book.Title)</td>
                    <td>@(book.Author.Name)</td>
                    <td>@(book.PublicationDate.ToShortDateString())</td>                   
                </tr>
            }
        </table>

    }
</section>