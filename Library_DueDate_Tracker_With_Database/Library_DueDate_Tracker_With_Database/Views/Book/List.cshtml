
@{
    ViewData["Title"] = "List";
}

<h1>Book List</h1>
<section>
    @if (ViewBag.Book.Count > 0)
    {
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Title</th>
                             
            </tr>
            @foreach (Book book in ViewBag.Book)
            {
                <tr>
                    <td><a href="/Book/Details?id=@(book.ID)">@(book.ID)</a></td>
                    <td>@(book.Title)</td>                                    
                </tr>
            }
        </table>

    }
</section>